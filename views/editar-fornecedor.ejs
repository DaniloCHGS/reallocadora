<%-include('partials/_head.ejs')%>

<body class="loading" data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "dark"}, "showRightSidebarOnPageLoad": true}'>
    
    <!-- Begin page -->
    <div id="wrapper">

        <!-- Topbar Start -->
        <%-include('partials/_nav.ejs')  %>
        <!-- end Topbar -->

        <!-- ========== Left Sidebar Start ========== -->
        <%-include('partials/_sideBar.ejs')%>
        <!-- Left Sidebar End -->

        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page" id="veiculos">
            <form class="content" method="post" action="/painel/fornecedor/editar">
                
                <!-- Start Content-->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <h4 class="page-title"> Editar Fornecedor</h4>
                                <%-include('partials/_msg-sucesso.ejs')%>
                            </div>
                        </div>
                    </div> 
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-lg-6 col-md-4 col-sm-6 com-xm-12">
                                    <div class="form-group">
                                        <label for="">Empresa</label>
                                        <input type="text" class="form-control" name="empresa" value="<%=fornecedor.empresa%>">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-4 col-sm-6 com-xm-12">
                                    <div class="form-group">
                                        <label for="">Cidade</label>
                                        <select name="cidade" id="" class="form-control" data-cidade="<%=fornecedor.cidade%>">
                                            <option value="">Selecionar cidade</option>
                                            <%cidades.forEach(cidade=>{ %>
                                                <option value="<%=cidade.nome%>" data-cidade="<%=cidade.nome%>"><%=cidade.nome%></option>
                                            <% }) %>
                                        </select>
                                        <script>
                                            let cidade = document.querySelector('select[data-cidade]').getAttribute('data-cidade')
                                            let optionCidade = [...document.querySelectorAll('option[data-cidade]')]
                                            optionCidade.forEach(opt=>{
                                                if(opt.getAttribute('data-cidade') == cidade){
                                                    opt.setAttribute('selected', true)
                                                }
                                            })
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="">Celular</label>
                                        <input type="text" class="form-control" data-toggle="input-mask" data-mask-format="(00) 00000-0000" name="celular" value="<%=fornecedor.celular%>">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="">Telefone</label>
                                        <input type="text" class="form-control" data-toggle="input-mask" data-mask-format="(00) 0000-0000" name="telefone" vlaue="<%=fornecedor.telefone%>">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="">Email</label>
                                        <input type="email" class="form-control" name="email" value="<%=fornecedor.email%>">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div> <span style="color:red;">*</span> Atenção, no mínimo 1 número de contato deve ser cadastrado</div>
                            <br>
                            <textarea name="desc" id="" cols="30" rows="10" class="form-control" placeholder="Descrição" value=""><%=fornecedor.desc%></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" name="id" value="<%=fornecedor.id%>">
                            <input type="submit" value="Salvar edição" class="btn btn-warning mt-3">
                        </div>
                            
                        </div>
                    </div>
                </div>
                <!-- container -->

            </form> <!-- content -->

            <%-include('partials/_footer.ejs')%>

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->

    <!-- Vendor js -->
    <script src="/assets/js/vendor.min.js"></script>

    <!-- Plugins js-->
    <script src="/assets/libs/flatpickr/flatpickr.min.js"></script>
    <!-- <script src="/assets/libs/apexcharts/apexcharts.min.js"></script> -->

    <script src="/assets/libs/selectize/js/standalone/selectize.min.js"></script>

    <!-- Plugins js -->
    <script src="/assets/libs/jquery-mask-plugin/jquery.mask.min.js"></script>
    <!-- Init js-->
    <script src="/assets/js/pages/form-masks.init.js"></script>

    <!-- App js-->
    <script src="/assets/js/app.min.js"></script>

    
    
</body>
</html>